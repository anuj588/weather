<!DOCTYPE html>
<html lang="en">

<head>
    {{>headerlinks}}
</head>

<body>
    {{>navbar }}

    <!-- main header -->
    <div class="container-fluid main_header " style="background-image: ;background-image: url('https://media.istockphoto.com/photos/digital-weather-forecast-interface-picture-id617583632?b=1&k=20&m=617583632&s=170667a&w=0&h=TeERlFdI4mBcUzgNyNUalBKQpkudrta9xAZbMuxsa08=');
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-size: 100% 100%;">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="main-content">
                    <form class="temp_form">
                        <input type="text" id="cityName" placeholder="enter your city name" autocomplete="off">
                        <input type="submit" value="serach" id="submitbtn">
                    </form>
                    <div class="tempinformation">
                        <div class="top_layer">

                            <p id="days"></p>
                            <p id="month_date"></p><br><br>
                            <p id="daates"></p><br><br>
                        </div>
                        <div class="main_layer ">
                            <p id="city_name">Get Output Here...</p>
                            <div class="middle_layer data_hide">
                                <p id="temp"><span id="temp_real_val">0</span> <sup>o</sup>C</p><br>

                                <p id="temp_status"><i class="fas fa-cloud" aria-hidden="true"></i></p>



                            </div>
                            <h1 style="color: blue; padding-left:16rem; font-size:2rem; " id="weather"></h1>

                        </div>
                        <h1 style="color: white;">Feels like <h1 style="color: blue; " id="feels"><sup
                                    class=" data_hide">o</sup></h1>
                        </h1>



                    </div>
                    <div class="" style="font-size:7rem; padding-bottom:2rem; color:rgba(151, 221, 32, 0.681)">Current Information



                        <div class="outer">
                            <div class="inner">
                                <p>
                                <div class="precipitation" style="color:brown;  font-size: 3rem">Humidity:
                                    <span id="hum">
                                </div>

                                </span>

                                <div class="pressure"  style="color:brown;  font-size: 3rem">Pressure:
                                    <span id="pressure">
                                </div>

                                </span>




                                <div class="speed"  style="color:brown;  font-size: 3rem">Speed:
                                    <span id="speed">
                                </div>

                                </span>


                                <div class="gust" style="color:brown; font-size: 3rem">Gust:
                                    <span id="gust">
                                </div>

                                </span>

                                </p>
                            </div>
                        </div>



                        {{!--

                        <div class="visiblity">Visibility:
                            <span id="visibility">
                        </div>

                        </span> --}}


                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- footer -->
    {{>footer}}
    <script src="js/main.js">

    </script>
    <script>
        const days = document.getElementById('days')
        const month_date = document.getElementById('month_date')
        const daates = document.getElementById('daates')

        const getCurrentDay = () => {
            let weekday = new Array(7);
            weekday[0] = "sunday-";
            weekday[1] = "monday-";
            weekday[2] = "tuesday-";
            weekday[3] = "wednesday-";
            weekday[4] = "thursday-";
            weekday[5] = "friday-";
            weekday[6] = "saturday-";

            let currentTime = new Date();

            var day = weekday[currentTime.getDay()];

            days.innerText = day;

        };
        const getCurrentTime = () => {
            var months = [
                "january-",
                "february-",
                "March-",
                "april-",
                "may-",
                "june-",
                "july-",
                "august-",
                "september-",
                "octber-",
                "november-",
                "december-",
            ];
            let currentmon_date = new Date();
            var mon = months[currentmon_date.getMonth()];
            month_date.innerText = mon;
            //var cur_date = currentmon_date.getDate()
            //console.log(cur_date)
        }
        const getdate = () => {
            let dates = new Date()
            var datess = dates.getDate()
            daates.innerText = datess;
            console.log(datess)
        }
        getCurrentDay()
        getCurrentTime()
        getdate()
    </script>
</body>

</html>